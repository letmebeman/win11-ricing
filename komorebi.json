{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.39/schema.json",
  "app_specific_configuration_path": "$Env:USERPROFILE/applications.json",
  "animation": {
    "fps": 60,
    "duration": 100,
    "style": "EaseInSine",
    "enabled": true
  },
  "border": false,
  "border_colours": {
    "single": "#ff00ff",
    "unfocused": "#aa55ff",
    "monocle": "#aa557f",
    "stack": "#ff00ff"
  },
  "border_implementation": "Komorebi",
  "border_offset": -1,
  "border_style": "Rounded",
  "border_width": 5,
  "cross_monitor_move_behaviour": "Insert",
  "default_container_padding": 20,
  "default_workspace_padding": 20,
  "float_override": false,
  "global_work_area_offset": {
    "left": 0,
    "top": 0,
    "right": 0,
    "bottom": 0
  },
  "mouse_follows_focus": false,
  "stackbar": {
    "height": 40,
    "tabs": {
      "unfocused_text": "#ffffff",
      "width": 300,
      "font_family": "Segoe UI",
      "focused_text": "#ffffff",
      "font_size": 0,
      "background": "#55007f"
    },
    "mode": "OnStack",
    "label": "Process"
  },
  "transparency": true,
  "transparency_alpha": 225,
  "unmanaged_window_operation_behaviour": "Op",
  "window_container_behaviour": "Create",
  "window_hiding_behaviour": "Cloak",
  "monitors": [
    {
      "workspaces": [
        {
          "name": "I",
          "layout": "BSP"
        },
        {
          "name": "II",
          "layout": "VerticalStack"
        },
        {
          "name": "III",
          "layout": "HorizontalStack"
        },
        {
          "name": "IV",
          "layout": "UltrawideVerticalStack"
        },
        {
          "name": "V",
          "layout": "Rows"
        },
        {
          "name": "VI",
          "layout": "Grid"
        },
        {
          "name": "VII",
          "layout": "RightMainVerticalStack"
        }
      ]
    }
  ]
}